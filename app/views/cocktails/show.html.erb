<div class="container-show">

  <div class="image-left" style="background-image: url('<%= cl_image_path 'd8i80tdv3zs4vgfgzrzp' %>');">
  </div>

  <div class="container-ingredient">

  <h1><%= @cocktail.name %></h1>
    <%= cl_image_tag @cocktail.photo.key, width: 400, height: 300, crop: :fill%>
    <ul>
      <% @cocktail.doses.each do |dose|%>
       <li><%= dose.ingredient.name %> -
       <%= dose.description %> | <%= link_to "Delete", dose_path(dose), method: :delete %>
     </li>
      <%end%>
    </ul>
    <%= link_to 'Add a dose', new_cocktail_dose_path(@cocktail), class: "btn btn-ghost-dark" %>
    <%= link_to 'Back', cocktails_path,  class: "btn btn-ghost-dark" %>
  </div>
</div>


